{
  "compilerOptions": {
    "target": "ES2020", // Target ECMAScript version
    "module": "CommonJS", // Module system for Node.js
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true, // Allows default imports from CommonJS
    "skipLibCheck": true, // Skip type checks of declaration files
    "strict": true, // Enable strict type-checking options
    "outDir": "./dist", // Output directory after compiling
    "resolveJsonModule": true, // Allows importing JSON files
    "baseUrl": ".", // Base URL for module resolution
    "paths": {
      "@models/*": ["src/models/*"] // Path alias for models
    }
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in src
  "exclude": ["node_modules"] // Exclude node_modules
}
